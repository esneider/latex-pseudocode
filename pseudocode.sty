% Is first call argument
\newif\iffirstarg

% Command for typesetting procedures/functions:
% \call{Insertion-Sort},
% \call{Dijkstra}[G, s],
% \call{Dijkstra}[G = graph, s = vertex]
\NewDocumentCommand{\call}{ m >{\SplitList{,}} o } {%
    #1%
    \IfValueT{#2} {%
%       Parse argument list
        \textrm{\tsp(%
            \global\firstargtrue%
            \ProcessList{#2}{\ParseArg}%
            \global\firstargfalse%
        \tsp)}%
    }%
}

% Parse argument
\NewDocumentCommand{\ParseArg}{ >{\SplitArgument{1}{=}} m } {\Arg#1}

% Process argument
\NewDocumentCommand{\Arg}{ m m } {%
    \iffirstarg\global\firstargfalse\else{\textit{,\,}}\fi%
    \id{#1}%
    \IfValueT{#2} {\textrm{\tsp :\ #2\tsp}}%
}


